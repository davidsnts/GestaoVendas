@model ClienteModel
<h2>Cadastro de cliente</h2>

<form asp-controller="Cliente" asp-action="Cadastro">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>

        <label>CPF ou CNPJ</label>
        <input asp-for="cpf_cnpj" type="text" class="form-control" />
        <span asp-validation-for="cpf_cnpj" class="text-danger"></span>

        <label>E-mail</label>
        <input asp-for="Email" type="text" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label>Senha</label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-block btn-success">Regisrar</button>
    </div>
</form>